<div class = "beauty_main">
	<h1>Add New Brand <small>Beauty_project</small></h1>
</div>

<div class = "container">
	<%= form_for :brand, url: brands_path do |f| %>
	<% if @brand.errors.any? %>
	<div class="panel panel-danger">
		<div class = "panel-heading">
			<%= pluralize(@brand.errors.count, "error") %> prohibited this article from being saved:
		</div>

		<div class = "panel-body">
		<ul>
			<% @brand.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
		</div>
	</div>
	<% end %>

  <div class="form-horizontal">
  	<div class="form-group">
  	<%= f.label :brand, class: "col-sm-2 control-label" %>
  		<div class="col-sm-10">
    		<%= f.text_field :brand, class: "col-sm-10 form-control", placeholder: "Input Cosmetic Brand Name" %>
    	</div>
    </div>
  </div>

  <div class="form-horizontal">
  	<div class="form-group">
  	<%= f.label :crawler, class: "col-sm-2 control-label" %>
  		<div class="col-sm-10">
    		<%= f.text_field :crawler, class: "form-control col-sm-10", placeholder: "Who Collected This Data" %>
    	</div>
    </div>
  </div>

  <div class="form-group col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-default" %>
    <%= link_to 'Back to Page', brands_path, class: "btn btn-default" %>
  </div>

<% end %>

</div>
